{
  "include": ["lib/*"],
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2022",
    "declarationDir": "dist/types",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "module": "es6",
    "lib": ["DOM", "ES2022"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
  }
}